<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
    <div id="favorite_btn_<%= @book.id %>">
      <%= render 'favorites/favorite', {book: @book} %>
    </div>
      </td>
      
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %></td>
            
          <% end %>
          
        </tr>
      </table>
      <div class="comments">
<p>コメント件数：<%= @book.post_comments.count %></p>

</div>

<%= render 'post_comments/newform'%>

<h2>コメント</h2>

<div id = "comments_index"></div>
  <%= render 'post_comments/index', {book: @book, post_comments: @post_comments} %>

     </div>
    </div>
  </div>
</div>
