<table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>

      <tr>
        <th>Follows: <%= user.followings.count %></th>
        </tr>
        <tr>
        <th>Followers: <%= user.followers.count %></th>
      </tr>


    <tr>
      <th colspan="2">

      ã€€<% if current_user == @user %>
        <%= link_to edit_user_path(@user), class:"btn btn-default btn-block" do %>
        <span class="fas fa-user-cog"></span>
      <% end %>

      <% else %>
        <% if current_user.following?(user) %>
        <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
      <% else %>
        <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
      <% end %>
      <% end %>
      </th>
    </tr>
  </tbody>
</table>